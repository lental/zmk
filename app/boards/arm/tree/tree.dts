/dts-v1/;
#include <nordic/nrf52832_qfaa.dtsi>
#include <dt-bindings/zmk/matrix_transform.h>

/ {
	model = "treemodel";
	compatible = "nordic,nRF52";

	chosen {
		zephyr,console = &uart0;
		zephyr,shell-uart = &uart0;
		zephyr,uart-mcumgr = &uart0;
		zephyr,bt-mon-uart = &uart0;
		zephyr,bt-c2h-uart = &uart0;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,code-partition = &slot0_partition;
		zmk,matrix_transform = &default_transform;
		/* kscan in the shields */
	};

	leds {
		compatible = "gpio-leds";
		led0: led_0 {
			gpios = <&gpio0 29 (GPIO_ACTIVE_LOW| GPIO_PULL_UP)>;
			label = "RGB RED 0";
		};
		led1: led_1 {
			gpios = <&gpio0 30 (GPIO_ACTIVE_LOW| GPIO_PULL_UP)>;
			label = "RGB Green 1";
		};
		led2: led_2 {
			gpios = <&gpio0 31 (GPIO_ACTIVE_LOW| GPIO_PULL_UP)>;
			label = "RGB Blue 2";
		};
	};

	default_transform: keymap_transform_0 {
		compatible = "zmk,matrix-transform";
		columns = <16>;
		rows = <5>;
		map = <
RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5) RC(0,6)   /**/ RC(0,7) RC(0,8) RC(0,9) RC(0,10) RC(0,11) RC(0,12)   RC(0,13)   RC(0,14)  RC(0,15)  
RC(1,0)     RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)       /**/RC(1,7) RC(1,8) RC(1,9) RC(1,10) RC(1,11) RC(1,12) RC(1,13)   RC(1,14)  RC(1,15)
RC(2,0)       RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5)     /**/ RC(2,7) RC(2,8) RC(2,9) RC(2,10) RC(2,11) RC(2,12)     RC(2,13)  RC(2,15)
RC(3,0) RC(3,1)  RC(3,2) RC(3,3) RC(3,4) RC(3,5)  /**/   RC(3,7) RC(3,8) RC(3,9) RC(3,10) RC(3,11)     RC(3,12)     RC(3,13) RC(3,14) 
RC(4,0)  RC(4,1)  RC(4,2)         RC(4,3)         RC(4,4) /**/   RC(4,7) RC(4,8) RC(4,9) RC(4,10) RC(4,11) RC(4,12) RC(4,13) 
		>;
	};

	/* These aliases are provided for compatibility with samples */
	aliases {
		led0 = &led0;
		led1 = &led1;
		led2 = &led2;
		bootloader-led0 = &led0;
	};
};

&adc {
	status = "okay";
};

&gpiote {
	status = "okay";
};

&gpio0 {
	status = "okay";
};
arduino_serial: &uart0 {
	status = "okay";
	compatible = "nordic,nrf-uarte";
	current-speed = <115200>;
/*
	tx-pin = <6>;
	rx-pin = <8>;
	rts-pin = <5>;
	cts-pin = <7>;*/
};


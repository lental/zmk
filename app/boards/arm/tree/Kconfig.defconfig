# nRF52833 DK NRF52833 board configuration

config BOARD
	default "shared"

config BT_CTLR
default BT

config ZMK_BLE
	default y

config ZMK_BLE_CLEAR_BONDS_ON_START
	default y


# If we want to do bluetooth with direct HID From the keyboards, we can enable this
if TREE_CENTRAL

config ZMK_KEYBOARD_NAME
 	default "Tree central"
 
config ZMK_SPLIT_ROLE_CENTRAL
 	default y

endif

if TREE_LEFT || TREE_RIGHT || TREE_CENTRAL

config ZMK_SPLIT
	default y

endif